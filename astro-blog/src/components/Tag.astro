---
export interface Props {
  name: string;
  size?: "sm" | "lg";
}

const { name, size = "sm" } = Astro.props;
---

<a
  href={`/tags/${name}/`}
  class={` ${
    size === "sm" ? "text-sm" : "text-base"
  } pr-2 group inline-block underline-offset-4 hover:text-skin-accent focus-visible:no-underline focus-visible:underline-offset-0`}
  aria-label={`View all posts with the tag: ${name}`}
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    class={`${
      size === "sm" ? "scale-75" : "scale-100"
    } inline-block h-6 w-6 fill-skin-base group-hover:fill-skin-accent`}
  >
    <path
      d="M16.018 3.815 15.232 8h-4.966l.716-3.815-1.964-.37L8.232 8H4v2h3.857l-.751 4H3v2h3.731l-.714 3.805 1.965.369L8.766 16h4.966l-.714 3.805 1.965.369.783-4.174H20v-2h-3.859l.751-4H21V8h-3.733l.716-3.815-1.965-.37zM14.106 14H9.141l.751-4h4.966l-.752 4z"
    ></path>
  </svg><span>{name}</span>
</a>