---
export interface Props {
  href?: string;
  className?: string;
  ariaLabel?: string;
  title?: string;
  disabled?: boolean;
}

const {
  href,
  className = "",
  ariaLabel,
  title,
  disabled = false,
} = Astro.props;
---

{
  href ? (
    <a
      href={href}
      class={`inline-block text-skin-base decoration-2 underline-offset-4 focus-visible:no-underline focus-visible:underline-offset-0 ${className}`}
      aria-label={ariaLabel}
      title={title}
    >
      <slot />
    </a>
  ) : (
    <button
      class={`inline-block text-skin-base decoration-2 underline-offset-4 focus-visible:no-underline focus-visible:underline-offset-0 ${className}`}
      aria-label={ariaLabel}
      title={title}
      disabled={disabled}
    >
      <slot />
    </button>
  )
}