---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="ja">
	<head>
		<BaseHead title={`Posts - ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="mx-auto max-w-3xl px-4">
			<section class="mb-16">
				<h1 class="text-4xl font-bold text-skin-base mb-4">Posts</h1>
				<p class="text-xl text-skin-base/80 leading-relaxed">すべての記事</p>
			</section>
			
			<section class="space-y-8">
				{posts.map((post) => (
					<article class="border-b border-skin-line/20 pb-8 last:border-b-0">
						<h2 class="text-2xl font-bold text-skin-base mb-4 leading-tight">
							<a 
								href={`/posts/${post.id}/`}
								class="hover:text-skin-accent transition-colors"
							>
								{post.data.title}
							</a>
						</h2>
						
						<div class="flex items-center gap-3 text-sm text-skin-base/60 mb-4">
							<FormattedDate date={post.data.pubDate} />
							<span>•</span>
							<span>5 min read</span>
						</div>
						
						<p class="text-skin-base/80 leading-relaxed mb-4">
							{post.data.description}
						</p>
						
						{post.data.tags && post.data.tags.length > 0 && (
							<div class="flex flex-wrap gap-2">
								{post.data.tags.map((tag) => (
									<a 
										href={`/tags/${tag}/`}
										class="inline-flex items-center text-xs text-skin-base bg-skin-card/50 hover:bg-skin-card hover:text-skin-accent px-3 py-1 rounded-full border border-skin-line/20 hover:border-skin-accent/30 transition-colors"
									>
										<span class="mr-1">#</span>
										{tag}
									</a>
								))}
							</div>
						)}
					</article>
				))}
			</section>
		</main>
		<Footer />
	</body>
</html>